mysql:
  image: mysql
  environment:
    MYSQL_ROOT_PASSWORD: root
  ports:
    - "3336:3306"


zookeeper:
  image: jplock/zookeeper
  ports:
    - "2181"

kafka:
  image: wurstmeister/kafka:0.8.1.1-1
  ports:
    - "9092:9092"
  links:
    - zookeeper:zk
  environment:
    KAFKA_ADVERTISED_HOST_NAME: 192.168.59.103
  volumes:
    - /var/run/docker.sock:/var/run/docker.sock


dwstream:
  build: ../memex-datawake-stream
  links:
    - mysql:mysql
    - kafka:kafka
    - zookeeper:zk
  volumes:
    - /Users/.../code/sotera/Datawake/memex-datawake-stream:/memex-datawake-stream

dwsearch:
  build: ../trail-specific-search
  working_dir: /trail-specific-search
  links:
    - mysql:mysql
    - kafka:kafka
    - zookeeper:zk
  environment:
    DW_DB_USER: root
    DW_DB_PASSWORD: root
    DW_DB_JDBC: jdbc:mysql://192.168.59.103:3336/memex_sotera
    DW_BING_KEY: YOUR_KEY_HERE
    DW_GOOGLE_PUBLIC_KEY: YOUR_KEY_HERE
    DW_GOOGLE_CUSTOM_SEARCH_CX: YOUR_CUSTOM_SEARCH_HERE
    DW_KAFKA_BROKERS: 192.168.59.103:9092
    DW_ZK_QUORUM: 192.168.59.103:2181
    DW_SEARCH_API: localhost:8787/search?term=
  command: scala -classpath "build/libs/Search-Crawler-1.0-all.jar" com.soteradefense.datawake.trails.topology.search.SearchTopology


dwurlrank:
  build: ../trail-specific-search
  working_dir: /trail-specific-search
  links:
    - mysql:mysql
    - kafka:kafka
    - zookeeper:zk

  environment:
      DW_DB_USER: root
      DW_DB_PASSWORD: root
      DW_DB_JDBC: jdbc:mysql://192.168.59.103:3336/memex_sotera
      DW_KAFKA_BROKERS: 192.168.59.103:9092
      DW_ZK_QUORUM: 192.168.59.103:2181

  command: scala -classpath "build/libs/Search-Crawler-1.0-all.jar" com.soteradefense.datawake.trails.topology.rank.UrlRankTopology

dwurlcontents:
  build: ../trail-specific-search
  working_dir: /trail-specific-search
  links:
    - mysql:mysql
    - kafka:kafka
    - zookeeper:zk
  environment:
    DW_DB_USER: root
    DW_DB_PASSWORD: root
    DW_DB_JDBC: jdbc:mysql://192.168.59.103:3336/memex_sotera
    DW_KAFKA_BROKERS: 192.168.59.103:9092
    DW_ZK_QUORUM: 192.168.59.103:2181
  command: scala -classpath "build/libs/Search-Crawler-1.0-all.jar" com.soteradefense.datawake.trails.topology.save.UrlContentsTopology

datawake:
  build: ../server
  links:
    - mysql:mysql
    - kafka:kafka
  ports:
    - "80:80"
  environment:
    DW_DB: memex_sotera
    DW_DB_USER: root
    DW_DB_PASSWORD: root
    DW_DB_HOST: 192.168.59.103
    DW_DB_PORT: 3336
    DW_KAFKA_CONN_POOL: 192.168.59.103:9092
    DW_KAFKA_PUB_TOPIC: memex-datawake-visited
    #DW_GOOGLE_CLIENT_IDS:
    DW_MOCK_AUTH:  1
    DW_CONN_TYPE: mysql
    #DW_IMPALA_HOSTS:
    #DW_HBASE_HOST:
    #DW_EXTERNAL_LINK_NAMES:
    #DW_EXTERNAL_LINK_VALUES:
  volumes:
    - /Users/.../code/sotera/Datawake/server/datawake:/usr/local/share/tangelo/web/datawake
    - /Users/.../code/sotera/Datawake/server/domain:/usr/local/share/tangelo/web/domain
    - /Users/.../code/sotera/Datawake/server/forensic:/usr/local/share/tangelo/web/forensic
    - /Users/.../code/sotera/Datawake/memex-datawake-stream:/memex-datawake-stream




